<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omniperform.system.mapper.WechatSopDetailsMapper">
    
    <resultMap type="WechatSopDetails" id="WechatSopDetailsResult">
        <result property="detailId"    column="detail_id"    />
        <result property="sopType"    column="sop_type"    />
        <result property="title"    column="title"    />
        <result property="overview"    column="overview"    />
        <result property="keyPoints"    column="key_points"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectWechatSopDetailsVo">
        select detail_id, sop_type, title, overview, key_points, content, status, create_by, create_time, update_by, update_time, remark from wechat_sop_details
    </sql>

    <select id="selectWechatSopDetailsList" parameterType="WechatSopDetails" resultMap="WechatSopDetailsResult">
        <include refid="selectWechatSopDetailsVo"/>
        <where>  
            <if test="sopType != null  and sopType != ''"> and sop_type = #{sopType}</if>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and create_by = #{createBy}</if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectWechatSopDetailsByDetailId" parameterType="Long" resultMap="WechatSopDetailsResult">
        <include refid="selectWechatSopDetailsVo"/>
        where detail_id = #{detailId}
    </select>

    <select id="selectWechatSopDetailsBySopType" parameterType="String" resultMap="WechatSopDetailsResult">
        <include refid="selectWechatSopDetailsVo"/>
        where sop_type = #{sopType} and status = '1'
    </select>
        
    <insert id="insertWechatSopDetails" parameterType="WechatSopDetails" useGeneratedKeys="true" keyProperty="detailId">
        insert into wechat_sop_details
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sopType != null and sopType != ''">sop_type,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="overview != null">overview,</if>
            <if test="keyPoints != null">key_points,</if>
            <if test="content != null">content,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sopType != null and sopType != ''">#{sopType},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="overview != null">#{overview},</if>
            <if test="keyPoints != null">#{keyPoints},</if>
            <if test="content != null">#{content},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateWechatSopDetails" parameterType="WechatSopDetails">
        update wechat_sop_details
        <trim prefix="SET" suffixOverrides=",">
            <if test="sopType != null and sopType != ''">sop_type = #{sopType},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="overview != null">overview = #{overview},</if>
            <if test="keyPoints != null">key_points = #{keyPoints},</if>
            <if test="content != null">content = #{content},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where detail_id = #{detailId}
    </update>

    <delete id="deleteWechatSopDetailsByDetailId" parameterType="Long">
        delete from wechat_sop_details where detail_id = #{detailId}
    </delete>

    <delete id="deleteWechatSopDetailsByDetailIds" parameterType="String">
        delete from wechat_sop_details where detail_id in 
        <foreach item="detailId" collection="array" open="(" separator="," close=")">
            #{detailId}
        </foreach>
    </delete>
</mapper>