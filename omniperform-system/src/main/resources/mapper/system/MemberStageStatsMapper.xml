<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omniperform.system.mapper.MemberStageStatsMapper">
    
    <resultMap type="MemberStageStats" id="MemberStageStatsResult">
        <result property="statsId"    column="stats_id"    />
        <result property="statsMonth"    column="stats_month"    />
        <result property="babyStage"    column="baby_stage"    />
        <result property="memberCount"    column="member_count"    />
        <result property="newMemberCount"    column="new_member_count"    />
        <result property="activeMemberCount"    column="active_member_count"    />
        <result property="purchaseMemberCount"    column="purchase_member_count"    />
        <result property="totalPurchaseAmount"    column="total_purchase_amount"    />
        <result property="avgOrderValue"    column="avg_order_value"    />
        <result property="stageRatio"    column="stage_ratio"    />
        <result property="statsTime"    column="stats_time"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectMemberStageStatsVo">
        select id as stats_id, stat_month as stats_month, baby_stage, member_count, new_members as new_member_count, active_members as active_member_count, 0 as purchase_member_count, purchase_amount as total_purchase_amount, avg_crfme_score as avg_order_value, 0.0 as stage_ratio, create_time as stats_time, create_time, update_time from member_stage_monthly_stats
    </sql>

    <select id="selectMemberStageStatsList" parameterType="MemberStageStats" resultMap="MemberStageStatsResult">
        <include refid="selectMemberStageStatsVo"/>
        <where>  
            <if test="statsMonth != null  and statsMonth != ''"> and stats_month = #{statsMonth}</if>
            <if test="babyStage != null  and babyStage != ''"> and baby_stage = #{babyStage}</if>
            <if test="memberCount != null "> and member_count = #{memberCount}</if>
            <if test="newMemberCount != null "> and new_member_count = #{newMemberCount}</if>
            <if test="activeMemberCount != null "> and active_member_count = #{activeMemberCount}</if>
            <if test="purchaseMemberCount != null "> and purchase_member_count = #{purchaseMemberCount}</if>
            <if test="totalPurchaseAmount != null "> and total_purchase_amount = #{totalPurchaseAmount}</if>
            <if test="avgOrderValue != null "> and avg_order_value = #{avgOrderValue}</if>
            <if test="stageRatio != null "> and stage_ratio = #{stageRatio}</if>
            <if test="statsTime != null "> and stats_time = #{statsTime}</if>
        </where>
        order by stats_month desc, baby_stage
    </select>
    
    <select id="selectMemberStageStatsByStatsId" parameterType="Long" resultMap="MemberStageStatsResult">
        <include refid="selectMemberStageStatsVo"/>
        where id = #{statsId}
    </select>

    <select id="selectMemberStageStatsByMonth" parameterType="String" resultMap="MemberStageStatsResult">
        <include refid="selectMemberStageStatsVo"/>
        where stat_month = #{month}
        order by baby_stage
    </select>
        
    <insert id="insertMemberStageStats" parameterType="MemberStageStats" useGeneratedKeys="true" keyProperty="statsId">
        insert into member_stage_monthly_stats
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="statsMonth != null and statsMonth != ''">stat_month,</if>
            <if test="babyStage != null and babyStage != ''">baby_stage,</if>
            <if test="memberCount != null">member_count,</if>
            <if test="newMemberCount != null">new_members,</if>
            <if test="activeMemberCount != null">active_members,</if>
            <if test="totalPurchaseAmount != null">purchase_amount,</if>
            <if test="avgOrderValue != null">avg_crfme_score,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="statsMonth != null and statsMonth != ''">#{statsMonth},</if>
            <if test="babyStage != null and babyStage != ''">#{babyStage},</if>
            <if test="memberCount != null">#{memberCount},</if>
            <if test="newMemberCount != null">#{newMemberCount},</if>
            <if test="activeMemberCount != null">#{activeMemberCount},</if>
            <if test="totalPurchaseAmount != null">#{totalPurchaseAmount},</if>
            <if test="avgOrderValue != null">#{avgOrderValue},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateMemberStageStats" parameterType="MemberStageStats">
        update member_stage_monthly_stats
        <trim prefix="SET" suffixOverrides=",">
            <if test="statsMonth != null and statsMonth != ''">stat_month = #{statsMonth},</if>
            <if test="babyStage != null and babyStage != ''">baby_stage = #{babyStage},</if>
            <if test="memberCount != null">member_count = #{memberCount},</if>
            <if test="newMemberCount != null">new_members = #{newMemberCount},</if>
            <if test="activeMemberCount != null">active_members = #{activeMemberCount},</if>
            <if test="totalPurchaseAmount != null">purchase_amount = #{totalPurchaseAmount},</if>
            <if test="avgOrderValue != null">avg_crfme_score = #{avgOrderValue},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{statsId}
    </update>

    <delete id="deleteMemberStageStatsByStatsId" parameterType="Long">
        delete from member_stage_monthly_stats where id = #{statsId}
    </delete>

    <delete id="deleteMemberStageStatsByStatsIds" parameterType="String">
        delete from member_stage_monthly_stats where id in 
        <foreach item="statsId" collection="array" open="(" separator="," close=")">
            #{statsId}
        </foreach>
    </delete>

</mapper>