<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omniperform.system.mapper.DashboardProductSalesMapper">
    
    <resultMap type="DashboardProductSales" id="DashboardProductSalesResult">
        <result property="id"    column="id"    />
        <result property="dataMonth"    column="data_month"    />
        <result property="productName"    column="product_name"    />
        <result property="salesAmount"    column="sales_amount"    />
        <result property="salesQuantity"    column="sales_quantity"    />
        <result property="marketShare"    column="market_share"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDashboardProductSalesVo">
        select id, data_month, product_name, sales_amount, sales_quantity, market_share, create_by, create_time, update_by, update_time, remark from dashboard_product_sales
    </sql>

    <select id="selectDashboardProductSalesList" parameterType="DashboardProductSales" resultMap="DashboardProductSalesResult">
        <include refid="selectDashboardProductSalesVo"/>
        <where>  
            <if test="dataMonth != null  and dataMonth != ''"> and data_month = #{dataMonth}</if>
            <if test="productName != null  and productName != ''"> and product_name like concat('%', #{productName}, '%')</if>
            <if test="salesAmount != null "> and sales_amount = #{salesAmount}</if>
            <if test="salesQuantity != null "> and sales_quantity = #{salesQuantity}</if>
            <if test="marketShare != null "> and market_share = #{marketShare}</if>
        </where>
        order by data_month desc, sales_amount desc
    </select>
    
    <select id="selectDashboardProductSalesById" parameterType="Long" resultMap="DashboardProductSalesResult">
        <include refid="selectDashboardProductSalesVo"/>
        where id = #{id}
    </select>

    <select id="selectByDataMonth" parameterType="String" resultMap="DashboardProductSalesResult">
        <include refid="selectDashboardProductSalesVo"/>
        where data_month = #{dataMonth}
        order by sales_amount desc
    </select>

    <select id="selectByMonthRange" resultMap="DashboardProductSalesResult">
        <include refid="selectDashboardProductSalesVo"/>
        where data_month between #{startMonth} and #{endMonth}
        order by data_month asc, ranking asc
    </select>
        
    <insert id="insertDashboardProductSales" parameterType="DashboardProductSales" useGeneratedKeys="true" keyProperty="id">
        insert into dashboard_product_sales
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dataMonth != null and dataMonth != ''">data_month,</if>
            <if test="productName != null and productName != ''">product_name,</if>
            <if test="productCategory != null and productCategory != ''">product_category,</if>
            <if test="salesAmount != null">sales_amount,</if>
            <if test="salesQuantity != null">sales_quantity,</if>
            <if test="salesTarget != null">sales_target,</if>
            <if test="achievementRate != null">achievement_rate,</if>
            <if test="marketShare != null">market_share,</if>
            <if test="growthRate != null">growth_rate,</if>
            <if test="ranking != null">ranking,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dataMonth != null and dataMonth != ''">#{dataMonth},</if>
            <if test="productName != null and productName != ''">#{productName},</if>
            <if test="productCategory != null and productCategory != ''">#{productCategory},</if>
            <if test="salesAmount != null">#{salesAmount},</if>
            <if test="salesQuantity != null">#{salesQuantity},</if>
            <if test="salesTarget != null">#{salesTarget},</if>
            <if test="achievementRate != null">#{achievementRate},</if>
            <if test="marketShare != null">#{marketShare},</if>
            <if test="growthRate != null">#{growthRate},</if>
            <if test="ranking != null">#{ranking},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateDashboardProductSales" parameterType="DashboardProductSales">
        update dashboard_product_sales
        <trim prefix="SET" suffixOverrides=",">
            <if test="dataMonth != null and dataMonth != ''">data_month = #{dataMonth},</if>
            <if test="productName != null and productName != ''">product_name = #{productName},</if>
            <if test="productCategory != null and productCategory != ''">product_category = #{productCategory},</if>
            <if test="salesAmount != null">sales_amount = #{salesAmount},</if>
            <if test="salesQuantity != null">sales_quantity = #{salesQuantity},</if>
            <if test="salesTarget != null">sales_target = #{salesTarget},</if>
            <if test="achievementRate != null">achievement_rate = #{achievementRate},</if>
            <if test="marketShare != null">market_share = #{marketShare},</if>
            <if test="growthRate != null">growth_rate = #{growthRate},</if>
            <if test="ranking != null">ranking = #{ranking},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDashboardProductSalesById" parameterType="Long">
        delete from dashboard_product_sales where id = #{id}
    </delete>

    <delete id="deleteDashboardProductSalesByIds" parameterType="String">
        delete from dashboard_product_sales where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>